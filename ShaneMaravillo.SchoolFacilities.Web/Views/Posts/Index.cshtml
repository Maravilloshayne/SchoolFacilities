@model ShaneMaravillo.SchoolFacilities.Web.ViewModels.IndexViewModel
@using ShaneMaravillo.SchoolFacilities.Web.Infrastructures.Data.Models
@{
    Layout = "~/Views/Shared/_BlogWithWidgets.cshtml";
}


    <h1 class="my-4">
     Posts
        <small>Wall view </small>
    </h1>
@{ 


    foreach (Post post in Model.Posts)
    {
        <!--Blog Post-->
    <div class=" cardd mb-4">
        <img class="card-img-top" src="~/posts/@post.Id/shane.png.jpg" alt="Card image cap" style="max-width:150px;max-height:150px;">
        <div class=" card body">
            <h2 style="background-color:dodgerblue;class="card-title">@post.Title</h2>
               
            <p class="card-text">@post.Description</p>
            <a href="#" class="btn btn-primary">Read More &rarr;</a>

        </div>
        <div class="card footer text-muted">
            Posted on @post.Timestamp.ToString("dddd, dd yyyy hh:mm tt")
        </div>

    </div>


    }
}


<!--Pagination-->
<ul class="pagination justify-content-center mb-4">
    <li class="page-item">
        <a class="page-link" href="#" >&larr; Older</a>

    </li>
    <li class="page-item">
        <a class="page-link" href="#">Newer &rarr;</a>
    </li>
</ul>

